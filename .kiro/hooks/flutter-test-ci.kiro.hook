{
  "enabled": true,
  "name": "Flutter CI Check",
  "description": "Runs dart format check and flutter analyze when Dart files are edited. If issues found, the agent will fix them.",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "pattern": "**/*.dart"
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run `dart format --set-exit-if-changed .` and `flutter analyze` to check for formatting and lint issues. If any issues are found, fix them."
  }
}